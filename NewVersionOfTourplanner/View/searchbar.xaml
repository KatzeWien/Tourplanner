<UserControl x:Class="NewVersionOfTourplanner.View.searchbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewVersionOfTourplanner.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="SearchBox" Padding="5" Margin="0" VerticalAlignment="Center" Grid.Row="0">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Padding" Value="5,5,30,5"/>
                </Style>
            </TextBox.Style>
        </TextBox>

        <Button Grid.Column="0" Margin="5,0,4,0" Background="Transparent" BorderThickness="0"
    HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5">
            🔍
        </Button>
    </Grid>
</UserControl>
